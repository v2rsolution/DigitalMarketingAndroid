<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <include layout="@layout/toolbar_layout"/>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relBottomAd"
            android:layout_marginBottom="@dimen/dim_9"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim_9"
                    android:layout_marginRight="@dimen/dim_9"
                    android:layout_marginTop="@dimen/dim_9"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/lin1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_selector_rectangle"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner_video_tutorial"/>

                        <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_32"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim_7"
                            android:text="VIDEO TUTORIALS"
                            android:layout_alignParentBottom="true"
                            android:textColor="#fff"
                            android:background="#33000000"
                            android:textSize="@dimen/font_size_14"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim_9"
                    android:layout_marginRight="@dimen/dim_9"
                    android:layout_marginTop="@dimen/dim_2"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/lin2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_selector_rectangle"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/minus_10"
                            android:paddingRight="@dimen/minus_10"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/banner_interview_ques"/>

                        <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_32"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim_7"
                            android:text="INTERVIEW QUESTIONS"
                            android:textColor="#fff"
                            android:background="#33000000"
                            android:textSize="@dimen/font_size_14"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim_9"
                    android:layout_marginRight="@dimen/dim_9"
                    android:layout_marginTop="@dimen/dim_2"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/lin3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_selector_rectangle"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner_quiz"/>

                        <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_32"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim_7"
                            android:text="QUIZ TEST"
                            android:textColor="#fff"
                            android:background="#33000000"
                            android:layout_alignParentBottom="true"
                            android:textSize="@dimen/font_size_14"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


        <include layout="@layout/content_ad_banner"/>

    </RelativeLayout>
</LinearLayout>
