<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_250"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_15">

    <LinearLayout
        android:id="@+id/linSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dim_32"
            android:layout_height="@dimen/dim_32"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:tint="@color/colorTeal"/>

        <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:gravity="center"
            android:text="Result successfully sent to your email address"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_14"/>

        <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
            android:id="@+id/txtOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_35"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/btn_primary_selector_rectangle_curved"
            android:gravity="center"
            android:text="OK"
            android:textColor="#fff"
            android:textSize="@dimen/font_size_14"/>

    </LinearLayout>

</RelativeLayout>