<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_5"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:minHeight="60dp"
        android:padding="@dimen/dim_10">

        <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
            android:id="@+id/txtInitial"
            android:layout_width="@dimen/dim_32"
            android:layout_height="@dimen/dim_32"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_bg_ques"
            android:gravity="center"
            android:text="Q"
            android:textColor="#fff"
            android:textSize="@dimen/font_size_16"
        />

        <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_toLeftOf="@+id/img"
            android:layout_toRightOf="@+id/txtInitial"
            android:text="Title"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_16"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>