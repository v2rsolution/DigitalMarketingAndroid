<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_300"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_15">

    <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_9"
        android:gravity="center"
        android:padding="@dimen/dim_3"
        android:text="Are you sure you want to quit the quiz?"
        android:textColor="@color/colorDimPrimary"
        android:textSize="@dimen/font_size_16"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/txtMessage"
        android:layout_height="@dimen/dim_40"
        android:layout_alignRight="@+id/txtMessage"
        android:gravity="right|center_vertical"
        android:layout_marginTop="@dimen/dim_9"
        android:orientation="horizontal">

        <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dim_9"
            android:background="?attr/selectableItemBackground"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_18"/>


        <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
            android:id="@+id/txtYes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:text="Yes"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dim_15"
            android:padding="@dimen/dim_9"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_18"/>

    </LinearLayout>

</RelativeLayout>