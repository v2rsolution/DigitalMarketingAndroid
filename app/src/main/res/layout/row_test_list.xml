<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim_7"
    android:paddingRight="@dimen/dim_7">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dim_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dim_9"
            android:weightSum="3">

            <ImageView
                android:layout_width="@dimen/dim_22"
                android:layout_height="@dimen/dim_22"
                android:layout_weight="0.1"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:tint="@color/colorBrownGreyNice"/>

            <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
                android:id="@+id/txtTestTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Test Title"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_14"/>

            <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                android:id="@+id/txtTakeQuiz"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_30"
                android:layout_weight="0.9"
                android:background="@drawable/btn_primary_selector_rectangle_curved"
                android:gravity="center"
                android:text="Take Quiz"
                android:textColor="#fff"
                android:textSize="@dimen/font_size_14"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>