<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_300"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="@dimen/dim_5"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_120"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgTitle"
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_contact_us"
                android:tint="#fff"/>
            <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
                android:id="@+id/txtEmailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_3"
                android:gravity="center"
                android:text="E-mail my result"
                android:textColor="#fff"
                android:textSize="@dimen/font_size_16"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_7">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/FloatingTextInputLayoutError"
                app:hintTextAppearance="@style/FloatingTextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/colorDimPrimary"
                    android:textSize="@dimen/font_size_14"/>

            </android.support.design.widget.TextInputLayout>

            <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                android:id="@+id/txtSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@drawable/btn_primary_selector_rectangle_curved"
                android:gravity="center"
                android:text="Send"
                android:textColor="#fff"
                android:textSize="@dimen/font_size_14"/>

            <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                android:id="@+id/txtSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_5"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/dim_12"
                android:text="Skip"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>