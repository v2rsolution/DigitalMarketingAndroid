<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dim_7"
    android:layout_marginRight="@dimen/dim_7"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relMainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dim_1"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgTickMark"
                    android:layout_width="@dimen/dim_21"
                    android:layout_height="@dimen/dim_21"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginTop="@dimen/dim_8"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:tint="@color/colorBrownGreyNice"/>

                <View
                    android:layout_width="@dimen/dim_2"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lin"
                    android:layout_below="@+id/imgTickMark"
                    android:layout_marginLeft="@dimen/dim_14"
                    android:layout_marginTop="-3.5dp"
                    android:background="@color/colorBrownGreyNice"/>

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dim_7"
                    android:paddingLeft="@dimen/dim_32"
                    android:paddingRight="@dimen/dim_7"
                    android:paddingTop="@dimen/dim_7">


                    <com.wscubetech.seovideotutorials.custom_views.MyTextViewBold
                        android:id="@+id/txtQuesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_3"
                        android:text="Lorem Ipsum"
                        android:textColor="@color/colorDimPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/font_size_16"/>


                    <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
                        android:id="@+id/txtAns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/colorDimPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/font_size_16"/>

                    <com.wscubetech.seovideotutorials.custom_views.MyTextViewRegular
                        android:id="@+id/txtAnsCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:textColor="@color/colorDimPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/font_size_14"/>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>